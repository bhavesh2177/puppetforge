#!/bin/bash

PATH='/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:/opt/puppetlabs/bin:/root/bin';
SERVICES=('etcd' 'kube-apiserver' 'kube-controller-manager' 'kube-scheduler' 'kubelet');

for i in ${SERVICES[@]}; 
  do
        pidof $i >/dev/null 2>&1;

        if test $? -ne 0;
          then
                exit 1; # As the service not running exiting with status code 1.
        fi

        if [[ "$i" == "etcd" ]];
          then
                curl --cacert /etc/kubernetes/pki/etcd/ca.crt --cert /etc/kubernetes/pki/etcd/client.crt --key /etc/kubernetes/pki/etcd/client.key -s https://<%= @etcd_ip %>:2379/health | grep -qi true
                if test $? -ne 0;
                  then
                        exit 1; # As the service not running exiting with status code 1.
                fi
        fi

done

exit 0;
